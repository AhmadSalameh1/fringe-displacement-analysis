{
  "name": "fringe-displacement (hardware)",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "postCreateCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt",

  "remoteUser": "vscode",

  "runArgs": [
    "--privileged"
  ],

  "mounts": [
    "source=/dev/bus/usb,target=/dev/bus/usb,type=bind",
    "source=${localWorkspaceFolder}/third_party/asi-sdk/libASICamera2.so,target=/opt/asi-sdk/libASICamera2.so,type=bind,readonly"
  ],

  "containerEnv": {
    "ASI_LIB_PATH": "/opt/asi-sdk/libASICamera2.so"
  }
}

